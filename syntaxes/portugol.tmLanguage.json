{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Portugol",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#scope"
		}
	],
	"repository": {

		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.portugol",
					"match": "\\b(se|entao|para|ate|enquanto|faca|retorne)\\b"
				},
				{
					"name": "storage.type",
					"match": "\\b(declare|inteiro|real|caractere|cadeia|logico)\\b"
				}
			]
		},

		"numeric-literal": {
			"patterns": [
				{
					"name": "constant.numeric.portugol",
					"match": "\\b^[^0|\\D]\\d+(\\.\\d+)?$\\b",
					"include": "keywords"
				}
			]
		},

		"scope": {
			"patterns": [
				{
					"name": "meta.scope",
					"begin": "inicio",
					"end": "fim",
					"patterns": [{"include": "keywords"}]				
				}
			]
		},

		"strings": {
			"name": "string.quoted.double.portugol",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.portugol",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.portugol"
}