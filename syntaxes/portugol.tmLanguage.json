{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Portugol",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.portugol",
					"match": "\\b(se|entao|para|ate|enquanto|faca|retorne)\\b"
				},
				{
					"name": "storage.type",
					"match": "\\b(inteiro|real|caracter|logico)\\b"
				},
				{
					"name": "meta.scope",
					"begin": "inicio",
					"end": "fim",
					"patterns": [{"include": "keywords"}]				
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.portugol",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.portugol",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.portugol"
}